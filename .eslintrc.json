{
    "env": {
        "es2021": true,
        "node": true
    },
    "plugins": [
        "prettier"
    ],
    "extends": [
      "standard-with-typescript",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/space-before-function-paren": "off",
      "@typescript-eslint/no-floating-promises": "off"
    }
}
